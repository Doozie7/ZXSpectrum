10 REM Simple Snake Game
20 LET S$="X": LET F$="O"
30 LET SX=10: LET SY=10
40 LET FX=RND*31: LET FY=RND*23
50 PRINT AT SY,SX;S$;AT FY,FX;F$
60 PAUSE 10
70 INPUT "Direction (N/S/E/W) ";D$
80 IF D$="N" THEN LET SY=SY-1
90 IF D$="S" THEN LET SY=SY+1
100 IF D$="E" THEN LET SX=SX+1
110 IF D$="W" THEN LET SX=SX-1
120 IF SX=FX AND SY=FY THEN GO SUB 200
130 IF SX<0 OR SX>31 OR SY<0 OR SY>23 THEN GO TO 300
140 PRINT AT SY,SX;S$
150 GO TO 60
200 REM Food Eaten
210 LET S$=S$+"X"
220 LET FX=RND*31: LET FY=RND*23
230 PRINT AT FY,FX;F$
240 RETURN
300 REM Game Over
310 PRINT "Game Over"
